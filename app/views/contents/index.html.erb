<h1>Contents</h1>
<%= form_tag(contents_path, method: :get) do %>
<div class="field">
  <% label_tag :tags %>
  <%= select_tag "tags[]", options_for_select(current_user.tags.pluck(:title), params[:tags]),  class: 'select2 form-control', multiple: 'multiple', style: 'width:100%'%>
</div>


<div class="actions">
  <%= submit_tag('Pesquisar') %>
</div>
<% end %>
<% @contents.each do |content| %>
<p>
<strong>Title: </strong> <%= content.title %> | 
<strong>Description: </strong> <%= content.description %> |
<strong>Tags: </strong> <%= content.tags.pluck(:title).join(', ') %> |
<%= link_to ' <- Editar', edit_content_path(content) %> | 
<%= link_to 'Exibir', content_path(content) %> |
<%= link_to 'Excluir', content_path(content), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<% end %>

<%= link_to 'Novo', new_content_path %>