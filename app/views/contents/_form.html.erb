<% if content.errors.any? %>
  <%= content.errors.full_messages.join(', ')%>
<% end %>

<%= form_with(model: content, local: true)  do |form| %>
<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title , class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :description %>
  <%= form.rich_text_area :description  %>
</div>
<div class="form-group">
  <%= form.label :tags %>
  <%= form.select :tags, options_for_select(current_user.tags.pluck(:title) , content.tags.pluck(:title)), {}, { class: 'select2 form-control', multiple: 'multiple' } %>
</div>
<br/>

<div class="mt-2">
  <%= form.submit 'Enviar', class: 'btn btn-primary' %>
</div>

<% end %>

<div class="pt-3">
  <%= link_to 'Voltar', contents_path %>
</div>
