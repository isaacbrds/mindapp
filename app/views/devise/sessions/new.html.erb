<section class="py-5">
  <div class="container col-6 px-4 px-lg-5 mt-5">
      <div class="card">
       <div class="card-body">
      <h2 class="card-title">Login</h2>
      <p class="card-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name) , class: "form-control") do |f| %>
        <div class="mb-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" , placeholder: "Insira seu e-mail"%>
        </div>
        <br/>
        <div class="mb-3">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Insira sua senha" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="mb-3">
          <%= f.submit "Log in" , class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      </p>      
    </div>
  </div>
</div>


</section>